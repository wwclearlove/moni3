<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3E51B5">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="公交查询"
            android:textColor="#fff"
            android:textSize="20sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#c7c7c7"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/bus_img"
            android:layout_alignParentLeft="true"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp" />


        <TextView
            android:id="@+id/bus_name"
            android:layout_toRightOf="@+id/bus_img"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="901路公交车"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/bus_time"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bus_name"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="首：frist 末：second"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/bus_renshu"
            android:layout_toLeftOf="@+id/bus_desc"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="当前承载能力: 1211人"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:layout_height="match_parent" />


        <Button
            android:id="@+id/bus_desc"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/beijing"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="详情"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ExpandableListView
        android:groupIndicator="@null"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/expand_listview"
        android:layout_height="match_parent">

    </ExpandableListView>

</LinearLayout>